.main{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-self: center
}
.search-warp{
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  color: #fff;  
  background: -webkit-linear-gradient(right, #ff5100 , #ff9000); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff5100 , #ff9000); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ff5100 , #ff9000); /* Firefox 3.6 - 15 */
  background: linear-gradient(right, #ff5100 , #ff9000); /* 标准的语法 */

}
.search-location{
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 22rpx;
  font-size: 26rpx;
  overflow: hidden
}
.search{
  flex-grow: 1;
  margin: 15rpx 24rpx;
}
.search-icon{
  width: 44rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-right: 22rpx;
}
.line{
  width: 100%;
  height: 16rpx;
  background-color:#efefef;
}